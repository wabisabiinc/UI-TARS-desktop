{
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "DOM",
      "ES2021"
    ],
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true
  },
  "include": [
    "src"
  ]
}