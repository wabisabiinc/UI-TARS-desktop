{
  "name": "@agent-infra/mcp-server-commands",
  "version": "0.0.1",
  "description": "An MCP server to run arbitrary commands",
  "type": "module",
  "main": "./build/server.js",
  "module": "./build/server.js",
  "types": "./build/server.d.ts",
  "bin": {
    "mcp-server-commands": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "clean": "rm -rf build",
    "build": "rm -rf build && tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "npm run build && tsc --watch",
    "dev": "npx -y @modelcontextprotocol/inspector tsx src/index.ts",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:integration": "vitest tests/integration"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1"
  },
  "devDependencies": {
    "tsx": "^4.19.3",
    "zod": "^3.23.8",
    "vitest": "^3.0.7",
    "@types/node": "^20.11.24",
    "typescript": "^5.7.3"
  }
}
